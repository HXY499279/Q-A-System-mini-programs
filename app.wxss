/**app.wxss**/
page {
  --theme: #30CB88;
  --fontSize: 28rpx;
  --background: #F0F0F0;
  --line: #F0F0F0;
  --grayWord: #999999;
  --unsoluteColor: #F87053;
  font-size: 28rpx;
}

.btn {
  color: white;
  background-color: var(--theme);
  font-weight: 500;
  font-size:32rpx;
  word-spacing: 4rpx;
}

.btn-hover {
  position: relative;
  top: 2rpx;
  box-shadow: 0px 0px 8px #999 inset;
}

