/* components/common/detail_item_box/index.wxss */
.detail_item_box {
  padding: 20rpx;
  box-shadow: 0 8rpx 8rpx var(--background);
  margin-bottom: 10rpx;
  background-color: white;
}

.top_item {
  /* background-color: rgb(242,242,242); */
}

.title {
  font-size: 34rpx;
  margin-bottom: 10rpx;
}

.answer_content{
  padding: 3px 8px;
  background-color: var(--background);
  border-radius: 3px;
}

.basic_inform {
  display: flex;
  justify-content: space-between;
  white-space: nowrap;
}

.user_infor {
  display: flex;
  align-items: centers;
}

.user_head,
.user_identity {
  display: flex;
  align-items: center;
}

.user_head_img {
  width: 45rpx;
  height: 45rpx;
  border-radius: 50%;
  margin-right: 15rpx;
  background-color: var(--background);
}

.user_identity {
  margin-left: 20rpx;
}

.user_identity_icon {
  width: 38rpx;
  height: 38rpx;
}

.user_identity_text {
  color: var(--grayWord);
}

.content_img {
  display: flex;
  justify-content: center;
}

.img {
  margin: 0 auto;
  height: 200rpx;
  width: 100%;
}

.content_words {
  margin: 10rpx 0;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  line-height: 40rpx;
  letter-spacing: 2rpx;
}

.nothing {
  padding: 10rpx 0;
}

.item_footer {
  color: var(--grayWord);
  padding: 10rpx 0;
}