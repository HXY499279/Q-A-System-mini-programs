<!--components/common/detail_item_box/index.wxml-->
<!-- 
	title:标题
	state:状态（是否解决）
	ru_operate:右上角的操作（分享、举报）
	bl_operate：左下角的信息（赞、收藏等）
 -->
<view class="detail_item_box">
	<view class="title">
		<slot name="title"></slot>
	</view>
	<view wx:if="{{answer}}">
		<view class="basic_inform">
			<view class="user_infor">
				<view class="user_head">
					<image class="user_head_img" src="{{url+answer.userImg}}"></image>
					<text>{{answer.userName}}</text>
				</view>
				<view class="user_identity">
					<image class="user_identity_icon" src="/img/identity/student.svg"></image>
					<text class="user_identity_text">{{answer.role == 3 ? "学生":answer.role == 2?"志愿者":"老师"}}</text>
				</view>
			</view>
			<slot name="ru_operate"></slot>
		</view>
		<view class="item_content">
			<view class="content_words">{{answer.content}}</view>
			<view class="content_img" wx:if="{{anwser.content&&answer.contentImg!=-1}}">
				<image mode='aspectFill' bindtap="handleImage" src="{{url+answer.contentImg}}"></image>
			</view>
		</view>
	</view>
	<view wx:else class="nothing">该问题暂时还没有回答，期待您的回答~</view>
	<view class="item_footer">
		<slot name="bl_operate"></slot>
	</view>


</view>