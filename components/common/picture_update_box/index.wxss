/* components/common/picture_update_box/index.wxss */
.picture_update_box {
  display: flex;
  flex-wrap: wrap;
}

.item {
  margin-right: 25rpx;
  margin-bottom: 25rpx;
  position: relative;
}

.item_pic {
  width: 160rpx;
  height: 160rpx;
  border-radius: 6rpx;
}

.item_delet {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0, 0, 0, 0.65);
  border-radius: 0px 6rpx 0px 200rpx;
  top: 0;
  right: 0;
  text-align: right;
  padding: 0rpx 8rpx 0 0;
  color: white;
}

.update_pic {
  width: 160rpx;
  height: 160rpx;
  background-color: var(--background);
  color: white;
  font-size: 60rpx;
  font-weight: bold;
  text-align: center;
  line-height: 160rpx;
  border-radius: 6rpx;
}