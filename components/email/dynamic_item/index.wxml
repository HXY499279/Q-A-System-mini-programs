<!--components/email/dynamic_item/index.wxml-->
<question-card dataDetail="{{msg.emailContent.question}}" type="{{0}}" bindtap="gotoQuestionDetail">
	<view slot="head_left" class="item_head">
		<image class="head_img" src="{{url+msg.emailContent.sender.imgPath}}"></image>
		<text class="head_name" wx:if="{{msg.type===2}}">{{msg.emailContent.sender.userName}} 回答了你的问题\n{{msg.emailCreatTime}}</text>
		<text class="head_name" wx:elif="{{msg.type===3}}">{{msg.emailContent.sender.userName}} 评论了你的回答\n{{msg.emailCreatTime}}</text>
		<text class="head_name" wx:elif="{{msg.type===4}}">{{msg.emailContent.sender.userName}} 点赞了你的回答\n{{msg.emailCreatTime}}</text>
	</view>
	<text slot="category" class="category">{{msg.emailContent.question.subjectName}}</text>
</question-card>