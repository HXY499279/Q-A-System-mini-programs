/* components/feedback/feedback_item/index.wxss */
@import "/img/operate/iconfont.wxss";
.feedback_content{
  padding: 20rpx;
  box-shadow: 0 8rpx 8rpx var(--background);
  margin-bottom: 10rpx;
  background-color: white;
}
.basic_inform {
  display: flex;
  justify-content: space-between;
  white-space: nowrap;
}

.user_infor {
  display: flex;
  align-items: centers;
}

.user_head,
.user_identity {
  display: flex;
  align-items: center;
}

.user_head_img {
  width: 45rpx;
  height: 45rpx;
  border-radius: 50%;
  margin-right: 15rpx;
  background-color: rgb(220, 220, 238);
}

.user_identity {
  margin-left: 20rpx;
}

.user_identity_icon {
  width: 43rpx;
  height: 43rpx;
}

.user_identity_text {
  color: var(--grayWord);
}

.content_words{
  padding: 10rpx 0;
}

.content_img {
  display: flex;
}

.img{
  margin-right: 10rpx;
  height: 200rpx;
}
.agree_box{
  padding-left: 10rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end; 
}
.agree{
  color: rgb(255, 141, 26);
}

.disagree{
  color: gray;
}
.iconfont{
  padding-right: 10rpx ;
}
