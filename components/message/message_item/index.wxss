.detail_item_box{
  padding:0 15rpx;
  box-shadow: 2rpx 8rpx 8rpx var(--background);
  background-color: white;
  margin-bottom: 10rpx;
}
.title{
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 32rpx;
  padding: 10rpx 0 15rpx;
  letter-spacing: 4rpx;
}
.user_info{
  display: flex;
  align-items: center;
}
.user_head_img{
  width: 45rpx;
  height: 45rpx;
  border-radius: 50%;
  margin-right: 15rpx;
}
.content{
  padding: 15rpx 0 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.footer{
  padding: 10rpx 0;
  display: flex;
  justify-content: space-between;
  color:var(--grayWord);
}