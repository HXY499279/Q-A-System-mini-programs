/* components/question/comment/index.wxss */
@import "/img/operate/iconfont.wxss";
.icon-jubao{
  color: gray;
  font-size: 32rpx;
}

.detail_item_box {
  padding: 20rpx;
  box-shadow: 0 8rpx 8rpx var(--background);
  margin-bottom: 10rpx;
  background-color: white;
}

.basic_inform {
  display: flex;
  justify-content: space-between;
  white-space: nowrap;
}

.user_infor {
  display: flex;
  align-items: centers;
}

.user_head,
.user_identity {
  display: flex;
  align-items: center;
}

.user_head_img {
  width: 45rpx;
  height: 45rpx;
  border-radius: 50%;
  margin-right: 15rpx;
  background-color: var(--background);
}

.user_identity {
  margin-left: 20rpx;
}

.user_identity_icon {
  width: 43rpx;
  height: 43rpx;
}

.user_identity_text {
  color: var(--grayWord);
}


.content_words {
  margin: 10rpx 0;
  line-height: 40rpx;
  letter-spacing: 2rpx;
  word-wrap: break-word;
}


.item_footer {
  display: flex;
  flex-direction: row-reverse;
  color: var(--grayWord);
  padding: 10rpx 0;
}