<!--pages/personal/pages/edit/index.wxml-->
<view class="edit_page">
  <view class="user_img_area">
    <image class="user_img_box" src="/img/timg.jpg" bindtap="changeHeadImg"></image>
    <view class="change_img" bindtap="changeHeadImg">点击更换头像</view>
  </view>
  <title icon="/img/userInfo/introduce_icon.svg" title="个人简介"/>
  <my-textarea myPlaceholder="千言万语不如一句话介绍自己~" bindgetInputValue="getInputValue"/>
  <button class="btn" hover-class="btn-hover" style="width:90vw">保存</button>
  <i-toast id="toast" />
</view>
