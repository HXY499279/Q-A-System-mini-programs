/**index.wxss**/
.index_page{
  background-color: var(--background);
  width: 100%;
  min-height: 100vh;
}
.swiper{
  height: 35vh;
}
.img{
 width: 100%;
 height: 100%;
}
.box{
  background-color: white;
  margin:15rpx 0;
  border-radius: 6rpx;
  padding: 0 20rpx;
}
.title_box{
  background-color: white;
  padding: 25rpx 15rpx;
  display: flex;
  text-align: center;
  align-items: center;
  letter-spacing: 2rpx;
  justify-content: space-between;
}
.title_left{
  display: flex;
}
.title_box_icon{
  width:38rpx;
  height: 38rpx;
  margin-right: 15rpx;
}
.title_box_title{
  font-size: 30rpx;
}
.course{
  padding:0 20rpx;
  display:flex;
}
.course_item{
  display: flex;
  flex-direction: column;
  width: 100rpx;
  text-align: center;
  padding: 15rpx;
}
.course_item_img{
  width: 100rpx;
  height: 100rpx;
  background-color: rgb(236, 236, 236);
  border-radius: 20rpx;
}
.course_item_more_img{
  width: 60rpx;
  height: 60rpx;
  border-radius: 20rpx;
  display: flex;
  padding: 19rpx;
  border:1px solid var(--theme)
}
.course_item_text{
  padding: 10rpx 0;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.other_question_title{
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 3rpx solid var(--line);
}
.other_question_title>image{
  width: 30rpx;
  height: 30rpx;
  padding:0 10rpx;
}
.title{
  display: flex;
  justify-content: space-between;
}
.title_state{
  color: var(--theme);
  white-space: nowrap;
}