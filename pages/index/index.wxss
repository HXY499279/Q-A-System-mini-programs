/**index.wxss**/
.index_page{
  background-color: var(--background);
}
.img{
  height: 280rpx;
}
.box{
  background-color: white;
  margin:15rpx 0;
  border-radius: 6rpx;
  padding: 0 20rpx;
}
.course{
  padding:0 20rpx;
  display:flex;
  justify-content: space-between;
}
.course_item{
  display: flex;
  flex-direction: column;
  width: 100rpx;
  text-align: center;
}
.course_item_img{
  width: 100rpx;
  height: 100rpx;
  border-radius: 20rpx;
}
.course_item_text{
  padding: 10rpx 0;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.other_question_title{
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 3rpx solid var(--line);
}
.other_question_title>image{
  width: 30rpx;
  height: 30rpx;
  padding:0 10rpx;
}
.title{
  display: flex;
  justify-content: space-between;
}
.title_state{
  color: var(--theme);
  white-space: nowrap;
}