/* pages/index/pages/answer_detail/index.wxss */
.answer_detail_page{
  position: relative;
  padding: 10rpx;
  font-size: var(--fontSize);
  display: flex;
  flex-direction: column;
}
.title{
  background-color: white;
  padding:10rpx 25rpx;
  margin: 10rpx 0;
  box-shadow: 0 8rpx 8rpx var(--background);
}
.comment_container{
  padding: 0 0 40rpx 0;
}
.show_comments{
  color: var(--grayWord);
  text-align: center;
  padding: 20rpx;
}
.next_botton{
  position: fixed;
  right: 0;
  top:60vh;
  background-color: rgb(206, 201, 201);
  opacity:.5;
  height: 50rpx;
  line-height: 50rpx;
  border-top-left-radius: 25rpx;
  border-bottom-left-radius: 25rpx; 
  padding: 0 10rpx;

}