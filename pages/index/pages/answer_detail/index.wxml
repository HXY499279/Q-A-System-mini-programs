<!--pages/index/pages/answer_detail/index.wxml-->
<view class="answer_detail_page">
	<qustion-detail-item questionDetailData="{{questionDetail}}" />
	<view class="title">回答</view>
	<answer-detail questionerId="{{questionDetail.accountId}}" answerDetail="{{answerDetail}}" bindonAdopt="onAdopt" bindonAgree="onAgree" bindonComment="onComment" />
	<view class="title">评论 {{commentList.length}}</view>
	<view class="comment_container">
		<view wx:for="{{commentList}}" wx:key="item">
			<comment-item comment="{{item}}" />
		</view>
		<view wx:if="{{answerDetail.commentCount > 2}}" class="show_comments" bindtap="showComments">查看全部评论 >> </view>
	</view>
	<view class="next_botton"  bindtap="showNext" >查看下个回答>></view>
	<i-toast id="toast" />
</view>