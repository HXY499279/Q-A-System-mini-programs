/* pages/index/pages/other_index/index.wxss */
.container{
  background-color: var(--background);
}

.personal_card{
  padding: 35rpx 0 20rpx 0;
  background-color: rgb(196, 232, 248);
  width: 100%;
  border-radius: 10rpx;
}

.personal_info{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.personal_img{
  background-color: var(--background);
  width: 125rpx;
  height: 125rpx;
  border-radius: 50%;
}
.personal_name{
  padding:25rpx 0;
}
.userInfo_detail{
  display: flex;
  justify-content: space-around;
}
.userInfo_item{
  display: flex;
  margin-right:15rpx;
  text-align: center;
  align-items: center;
}
.icon{
  width: 35rpx;
  height: 35rpx;
  margin-right: 5rpx;
}
.question_detail{
  display:flex;
  justify-content: space-around;
  padding:30rpx 20rpx 15rpx 20rpx;
}
.number{
  font-size: 28rpx;
  font-weight: bold;
}
.question_item{
  display: flex;
  text-align: center;
  flex-direction: column;
}
.personal_intro{
  margin:10rpx 15rpx;
  border-radius: 10rpx;
  background-color: white;
  padding:0 0 30rpx;
}
.introduce_text{
  margin-left: 20rpx;
}
.dynamic{
  padding: 0 15rpx;
  border-top-left-radius: 10rpx;
  border-top-right-radius:10rpx
}