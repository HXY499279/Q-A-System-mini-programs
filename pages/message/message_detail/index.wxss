/* pages/message/message_detail/index.wxss */
.message_detail_page{
  padding:25rpx;
}
.title{
  padding:10rpx;
  font-size: 32rpx;
}
.head{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 0;
}
.user_info,.user_head,.user_identity {
  display: flex;
  align-items: center;
}
.user_head_img{
  width: 45rpx;
  height: 45rpx;
  border-radius: 50%;
  margin-right: 15rpx;
}
.user_identity_icon{
  width: 38rpx;
  height: 38rpx;
  margin:0 10rpx
}
.head_date{
  color: var(--grayWord);
}
.content_text{
  padding: 10rpx 0;
}
.img_container{
  display: flex;
  justify-content: center;
}
.content_img{
  align-items: center;
  max-width: 100%;
  padding: 10rpx 0;
  background-color: var(--background);
}
.content_footer{
  color: var(--grayWord);
  display: flex;
  flex-direction: row-reverse;
}